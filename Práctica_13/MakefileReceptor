PROJECT = receptor
CFLAGS = -Wall
LDFLAGS = -lm -lpthread
CC = g++ -g3
EXCLUDED_FILES = emisor.cpp
OBJECTS = $(patsubst %.cpp, %.o, $(filter-out $(EXCLUDED_FILES),$(wildcard *.cpp)))

MULTICAST_GROUP = 224.0.0.10
LISTENING_PORT = 5000

ARGS = $(MULTICAST_GROUP) $(LISTENING_PORT)

all: $(PROJECT)

%.o: %.cpp
	$(CC) -c $< $(CFLAGS)

$(PROJECT): $(OBJECTS)
	$(CC) -o $@ $^ $(LDFLAGS)

.PHONY: clean

clean:
	rm -f $(OBJECTS) $(PROJECT)

run:
	./$(PROJECT) $(ARGS)

