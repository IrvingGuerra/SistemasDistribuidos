PROJECT = cliente
CFLAGS = -Wall
LDFLAGS = -lm -lpthread
CC = g++ -g3
EXCLUDED_FILES = servidor.cpp Respuesta.cpp
OBJECTS = $(patsubst %.cpp, %.o, $(filter-out $(EXCLUDED_FILES),$(wildcard *.cpp)))

SERVER_IP_ADDRESS = 192.168.0.101
SERVER_PORT = 5000
REQUESTS = 1000
ARGS = $(SERVER_IP_ADDRESS) $(SERVER_PORT) $(REQUESTS)

all: $(PROJECT)

%.o: %.cpp
	$(CC) -c $< $(CFLAGS)

$(PROJECT): $(OBJECTS)
	$(CC) -o $@ $^ $(LDFLAGS)

.PHONY: clean

clean:
	rm -f $(OBJECTS) $(PROJECT)

run:
	./$(PROJECT) $(ARGS)
